---
import Heading from "@components/typography/heading/heading.astro";
import SimpleText from "@components/typography/simple-text/simple-text.astro";
import ButtonGroup from "@components/wrappers/button-group/button-group.astro";
import Container from "@components/wrappers/container/container.astro";

const {
  eyebrow = "",
  heading = "",
  subtitle = "",
  buttonBlocks = [],
  class: className,
  ...rest
} = Astro.props;

const htmlAttributes = Object.fromEntries(
  Object.entries(rest).filter(([key]) => key !== "_component")
);
---

<Container
  {...htmlAttributes}
  class:list={["main-hero", className]}
  paddingHorizontal="xl"
  paddingVertical="xl"
  contentWidth="2xl"
>
  <SimpleText text={eyebrow} />
  <Heading text={heading} level="h1" />
  <SimpleText text={subtitle} />
  <ButtonGroup buttonBlocks={buttonBlocks} />
</Container>
