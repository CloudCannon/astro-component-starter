---
import Button from "@core-elements/button/Button.astro";

const {
  text = "Submit",
  variant = "primary",
  size = "md",
  iconName,
  iconPosition = "before",
  hideText = false,
  disabled = false,
  class: className,
  editable = true,
  _component,
  ...htmlAttributes
} = Astro.props;

const hasSlot = Astro.slots.has("default");
---

{
  hasSlot ? (
    <Button
      element="button"
      type="submit"
      text={text}
      variant={variant}
      size={size}
      iconName={iconName}
      iconPosition={iconPosition}
      hideText={hideText}
      disabled={disabled}
      editable={editable}
      data-prop="text"
      class:list={["submit", className]}
      {...htmlAttributes}
    >
      <slot />
    </Button>
  ) : (
    <Button
      element="button"
      type="submit"
      text={text}
      variant={variant}
      size={size}
      iconName={iconName}
      iconPosition={iconPosition}
      hideText={hideText}
      disabled={disabled}
      editable={editable}
      data-prop="text"
      class:list={["submit", className]}
      {...htmlAttributes}
    />
  )
}

<style lang="pcss" is:global>
  @layer components {
    .submit {
      margin-top: var(--spacing-md);
    }
  }
</style>
