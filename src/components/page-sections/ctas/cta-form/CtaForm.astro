---
import CustomSection from "@builders/custom-section/CustomSection.astro";
import Heading from "@core-elements/heading/Heading.astro";
import Image from "@core-elements/image/Image.astro";
import Text from "@core-elements/text/Text.astro";
import Form from "@forms/form/Form.astro";
import Split from "@wrappers/split/Split.astro";

const {
  heading = "",
  subtext = "",
  formAction = "./",
  formBlocks = [],
  imageSource = "",
  imageAlt = "",
  reverse = false,
  colorScheme = "inherit",
  backgroundColor,
  paddingVertical = "4xl",
  rounded = false,
  editable = true,
  class: className,
  _component,
  ...htmlAttributes
} = Astro.props;
---

<CustomSection
  class:list={["cta-form", className]}
  maxContentWidth="2xl"
  paddingHorizontal="lg"
  paddingVertical={paddingVertical}
  colorScheme={colorScheme}
  backgroundColor={backgroundColor}
  rounded={rounded}
  editable={editable}
  {...htmlAttributes}
>
  <Split
    class="split"
    distributionMode="fixed-flexible"
    fixedWidth="400"
    verticalAlignment="center"
    reverse={reverse}
    minSplitWidth={640}
    editable={editable}
  >
    <Fragment slot="first">
      <Heading level="h2" size="lg" data-prop="heading" editable={editable}>
        {heading}
      </Heading>
      <Text data-prop="subtext" text={subtext} editable={editable} />
      <Form
        class="form"
        action={formAction}
        formBlocks={formBlocks?.length > 0 ? formBlocks : []}
        editable={editable}
      >
        <slot />
      </Form>
    </Fragment>
    <Fragment slot="second">
      <Image
        source={imageSource}
        rounded={true}
        alt={imageAlt}
        aspectRatio="landscape"
        editable={editable}
        data-prop-src="imageSource"
        data-prop-alt="imageAlt"
        data-editable="image"
      />
    </Fragment>
  </Split>
</CustomSection>
