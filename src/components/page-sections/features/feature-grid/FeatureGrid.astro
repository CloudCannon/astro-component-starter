---
import CustomSection from "@builders/custom-section/CustomSection.astro";
import Heading from "@core-elements/heading/Heading.astro";
import SimpleText from "@core-elements/simple-text/SimpleText.astro";
import Text from "@core-elements/text/Text.astro";
import FeatureItem from "@features/feature-grid/FeatureItem.astro";
import Grid from "@wrappers/grid/Grid.astro";
import GridItem from "@wrappers/grid/GridItem.astro";

const {
  eyebrow = "",
  heading = "",
  subtext = "",
  features = [],
  colorScheme = "inherit",
  backgroundColor,
  paddingVertical = "4xl",
  editable = true,
  class: className,
  _component,
  ...htmlAttributes
} = Astro.props;
---

<CustomSection
  class:list={["feature-grid", className]}
  maxContentWidth="2xl"
  paddingHorizontal="lg"
  paddingVertical={paddingVertical}
  colorScheme={colorScheme}
  backgroundColor={backgroundColor}
  editable={editable}
  {...htmlAttributes}
>
  <SimpleText alignX="center" class="eyebrow" data-prop="eyebrow" editable={editable}>
    {eyebrow}
  </SimpleText>
  <Heading level="h2" size="lg" alignX="center" data-prop="heading" editable={editable}>
    {heading}
  </Heading>
  <Text
    class="feature-grid-subtext"
    alignX="center"
    data-prop="subtext"
    text={subtext}
    editable={editable}
  />
  <Grid
    gap="lg"
    minItemWidth="360"
    maxItemWidth="360"
    data-prop="features"
    class="feature-grid-grid"
    editable={editable}
  >
    {
      features.map((feature: any) => (
        <GridItem data-editable="array-item" editable={false}>
          <FeatureItem {...feature} class="feature-grid-item" editable={editable} />
        </GridItem>
      ))
    }
  </Grid>
</CustomSection>

<style lang="pcss" is:global>
  @layer page-sections {
    .feature-grid-grid {
      margin-top: var(--spacing-2xl);
    }
  }
</style>
