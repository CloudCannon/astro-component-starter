---
import CustomSection from "@builders/custom-section/CustomSection.astro";
import FeatureSliderItem from "@features/feature-slider/FeatureSliderItem.astro";
import Carousel from "@wrappers/carousel/Carousel.astro";

const {
  colorScheme = "inherit",
  backgroundColor,
  paddingVertical = "4xl",
  class: className,
  slides = [],
  editable = true,
  _component,
  ...htmlAttributes
} = Astro.props;
---

<CustomSection
  class:list={["feature-slider", className]}
  maxContentWidth="xl"
  paddingHorizontal="lg"
  paddingVertical={paddingVertical}
  colorScheme={colorScheme}
  backgroundColor={backgroundColor}
  editable={editable}
  {...htmlAttributes}
>
  <Carousel
    label="Feature slider"
    slideWidthPercent={100}
    minSlideWidth={0}
    autoPlay={false}
    autoScroll={false}
    data-prop="slides"
    editable={editable}
  >
    {
      slides.map((slide: any, index: number) => (
        <FeatureSliderItem
          data-editable="array-item"
          aria-label={`Slide ${index + 1} of ${slides.length}`}
          {...slide}
          editable={editable}
        />
      ))
    }
  </Carousel>
</CustomSection>
