/* For direct parents of .split (excluding editable-array elements) */
:where(:has(> .split):not(:is(editable-array-item, editable-array))) {
  container-type: inline-size;
}

/* For parents of editable-array that contain .split */
:where(:has(> editable-array > editable-array-item > .split)) {
  container-type: inline-size;
}

.split {
  --gap-size: var(--spacing-lg);
  --split-columns-mobile: 1fr;
  --split-columns: 1fr 1fr;
  --split-fixed-width: auto;

  display: grid;
  gap: var(--gap-size);
  grid-template-columns: var(--split-columns);

  &.align-top {
    align-items: start;
  }

  &.align-center {
    align-items: center;
  }

  &.align-bottom {
    align-items: end;
  }

  &.align-stretch {
    align-items: stretch;

    > .pane > *:only-child {
      height: 100%;
    }
  }

  .pane {
    min-width: 0;
    overflow-wrap: break-word;
    word-wrap: break-word;
  }
}

.split.half {
  --split-columns: 1fr 1fr;
}

.split.third-two-thirds {
  --split-columns: 1fr 2fr;
}

.split.two-thirds-third {
  --split-columns: 2fr 1fr;
}

.split.quarter-three-quarters {
  --split-columns: 1fr 3fr;
}

.split.three-quarters-quarter {
  --split-columns: 3fr 1fr;
}

.split.fixed-flexible {
  --split-columns: var(--split-fixed-width) 1fr;
}

.split.flexible-fixed {
  --split-columns: 1fr var(--split-fixed-width);
}
